import os
from tools import *

objs = []
cwd = GetCurrentDir()
c_list = os.listdir(cwd)

src = Glob('*.c')

objs = DefineGroup('ports', src, depend=[''])

for item in c_list:
    if os.path.isfile(os.path.join(cwd, item, 'Sconscript')):
        objs += SConscript(os.path.join(item, 'Sconscript'))

Return('objs')
